<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mobilna.MainPage">

    <StackLayout BackgroundColor="LightGreen">
        <Label Text="Wizyta u weterynarza" FontSize="Large" BackgroundColor="SeaGreen"/>
        <Entry Placeholder="Imię i nazwisko właściciela..."/>
        <Label Text="Gatunek"/>
        <ListView x:Name="list">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding .}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <StackLayout Orientation="Horizontal">
            <Label Text="Ile ma lat?"/>
            <Label BindingContext="{x:Reference slider}" Text="{Binding Value, StringFormat='{0:F0}'}"/>
            <Slider x:Name="slider" HorizontalOptions="FillAndExpand"/>
        </StackLayout>
        <Entry Placeholder="Cel wizyty"/>
        <TimePicker Time="16:00"/>
        <Button Text="OK"/>
    </StackLayout>

</ContentPage>
